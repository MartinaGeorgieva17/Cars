{
	"spellright.language": [
		"Bulgarian",
		"English (American)"
	],
	"spellright.documentTypes": [
		"markdown",
		"latex",
		"html"
	],
	"editor.fontSize": 20,
	"todo-tree.tree.showBadges": false,

	// "python.analysis.autoImportCompletions": true,
	// "python.interpreterPath": ".venv/bin/python",
	"python.terminal.activateEnvironment": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "/usr/bin/python3",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.extraPaths": [
		"./",
		"${workspaceFolder}",
		"${workspaceFolder}/.venv"
	],


	"pyqt-integration.pylupdate.cmd": "pylupdate6",
	"pyqt-integration.pyrcc.cmd": "pyrcc6",
	"pyqt-integration.pyuic.cmd": "pyuic6",
	"pyqt-integration.qtdesigner.path": ".venv/bin/qt6-tools designer"
}